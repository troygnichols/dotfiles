#!/bin/bash

# If we're in a git repo try to open it in github

if [ -d .git ] || git rev-parse --git-dir > /dev/null 2>&1 ];
then
  # lol this is so crappy
  url=$(git remote get-url origin | ruby -e 'url=STDIN.gets; if url =~ /^https\:\/\// then puts url else puts "https://github.com/#{url.split(":")[1].gsub(".git", "")}" end')
  echo "Opening URL: $url"
  open $url
else
  echo "This dir is not a git repo"
fi
